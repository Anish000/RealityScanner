<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5000000dp"/>
            <stroke android:width="5dp" android:color="@color/DarkGrey" />
            <gradient android:angle="-90" android:startColor="#ffff"
                android:endColor="#ffff"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5000000dp" />
            <stroke android:width="5dp" android:color="@color/DarkGrey" />
            <solid android:color="#ffff"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5000000dp" />
            <stroke android:width="5dp" android:color="@color/DarkGrey" />
            <gradient android:angle="-90" android:startColor="#ffff" android:endColor="#ffff" />
        </shape>
    </item>
</selector>